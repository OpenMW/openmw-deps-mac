#!/bin/sh

COMPILER_VARS=( CFLAGS CXXFLAGS LDFLAGS OBJCFLAGS OBJCXXFLAGS )

export PKG_CONFIG_PATH="@CMAKE_INSTALL_PREFIX@/lib/pkgconfig"

for VAR_NAME in "${COMPILER_VARS[@]}"; do
  VAR_VALUE=${!VAR_NAME}
  export $VAR_NAME="$VAR_VALUE -mmacosx-version-min=@CMAKE_OSX_DEPLOYMENT_TARGET@"
done

COMMAND_NAME="$1"

shift

sandbox-exec -f "@SANDBOX_PROFILE@" $COMMAND_NAME "$@"
